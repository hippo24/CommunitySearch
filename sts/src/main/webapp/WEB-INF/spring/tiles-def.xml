<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
    <definition name=".root" template="/WEB-INF/views/layout/baseLayout.jsp">
        <put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
    </definition>
    
   <definition name="/*/*" extends=".root">      
      <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
    </definition>
    
   <definition name="*" extends=".root">      
      <put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
    </definition>
    
    <definition name="baseLayout" template="/WEB-INF/views/layout/baseLayout.jsp">
        <put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
    </definition>

	<definition name="LOL" template="/WEB-INF/views/layout/baseLayout.jsp">
	  <put-attribute name="title" value="롤 전적 조회" />
	  <put-attribute name="header" value="/WEB-INF/views/layout/header.jsp" />
	  <put-attribute name="body" value="/WEB-INF/views/menu/LOL.jsp" />
	  <put-attribute name="footer" value="/WEB-INF/views/layout/footer.jsp" />
	</definition>
</tiles-definitions>
